<% title("分类信息") %>
<div class="module">
    <div class="moduleTitle"><%= yield(:title) %></div>
    <div class="main_module">
       <div style="float:right;margin-bottom:5px"><img src="/images/info_new_bt.gif" id="info_new_bt" class="image_button"/></div>
       <% if @infos.length >0 %>
       <table class="list" cellspacing="0">
            <tr>
                <th width="40%">标题</th>
                <th width="12%">类型</th>
                <th width="12%">发布人</th>
                <th width="12%">地区</th>
                <th width="12%">有效期</th>
                <th width="12%">发布日期</th>
            </tr>
            <%@infos.each do |info| %>
            <tr class="<%=cycle('list-line-odd','list-line-even')%>">
                <td><a href="/infos/<%=info.id%>" target="_blank"><%=info.title%></a></td>
                <td><%=info.info_type_name%></td>
                <td><%=info.user.login%><%=info.user.name%></td>
                <td><%=info.city_name%></td>
                <td><%=period_of_validity_name(info)%></td>
                <td><%= dtfmt(info.created_at)%></td>
            </tr>
            <% end %>
        </table>
        <% end %>
    </div>
    <div class="pagination_bar"><%= xwill_paginate @infos %></div>
    <div class="blank10"></div>
</div>
