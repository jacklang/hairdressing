<table class="tool_bar">
    <tr>
        <td><input type="button" value="新增" onclick="location.href='/admin/news/new'"></td>
    </tr>
</table>
<table class="stripeMe list">
  <tr>
    <th>标题</th>
    <th></th>
  </tr>
<% @news.each do |news| %>
  <tr class="<%=cycle('list-line-odd','list-line-even')%>">
    <td><%=link_to(news.title,news_path(news),:target => '_blank') %></td>
    <td><%= link_to '编辑', edit_admin_news_path(news) %> <%= link_to '删除', [:admin,news], :confirm => '确定删除吗？', :method => :delete %></td>
  </tr>
<% end %>
</table>
<div class="paginate"><%= xwill_paginate @news %></div>