<div class="line1"></div>
<div class="comment_title">发表评论</div>
<div id="comment_error"></div>
<% form_remote_for([@salon,@comment]) do |f| %>
  <ul class="form">   
    <li class="field">
      <label for="comment_comment">评论内容：</label><a name="comment"/><br />
      <%= f.text_area :comment,:cols => "70",:rows => "8" %>
    </li>
    <li class="field"><input type="submit" name="ok" value="发表" class="button"/></li>
  </ul>
<% end %>