<div class="module">
  <div class="moduleTitle"><%= yield(:title) %></div>
  <div class="main_module">
    <%= error_messages_for :job %>
    <% form_for(:job,@job,:url => user_salon_jobs_path(@salon)) do |f| %>
      <ul class="form">   
        <li class="field">
          <label for="job_title">人才招聘标题：</label><br />
          <%= f.text_field :title,:style => "width:300px;" %>
        </li>
        <li class="field">
          <label for="job_description">详细招聘信息：</label><br />
          <%= f.text_area :description,:cols => "80",:rows => "8" %>
        </li>
        <li class="field"><%= f.submit "保存" %> | <%=link_to '人才招聘信息管理',user_salon_jobs_path(@salon)%></li>
      </ul>
    <% end %>
  </div>
</div>